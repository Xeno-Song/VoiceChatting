<UserControl x:Name="userControl" x:Class="VoiceChattingClient.Overlays.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceChattingClient.Overlays"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="White"
                   RadiusX="{Binding BackgroundRound, ElementName=userControl}" d:RadiusX="10"
                   RadiusY="{Binding BackgroundRound, ElementName=userControl}" d:RadiusY="10" />
        <Grid Margin="{Binding BackgroundRound, ElementName=userControl}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</UserControl>
